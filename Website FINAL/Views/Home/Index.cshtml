<body>
        <div class="text-center" id="title-div">
            <h1><b>Invested, Unified, <i>Qualified.</i></b></h1>
            <br />
            <h1><b>For Bernards Children</b></h1>
        </div>
        <section class="row">
            <div class="column">
                <img class="img" src="~/css/Klight Photo (2).jpg" />
            </div>
            <div class="column2">
                <img class="img" src="~/css/Larry Nastro (4).jpg" />
            </div>
        </section>
        <div>
            <button class="About-button" onclick="window.location.href='https://localhost:44362/Home/About_Us';">
                <h2>
                    Learn More About Us
                </h2>
            </button>
        </div>
        <div id="signup_form_full">
            <form id="signup-form">
                <div id="signup_title" class="form-group">
                    <h2 class="text-center">
                        Sign Up to Stay Connected.
                    </h2>
                    <div>
                        <hr />
                    </div>
                </div>
                    <div class="form-group">
                        <label class="inside" id="email-label" for="email"></label>
                        <input type="email"
                               name="email"
                               id="email"
                               class="form-control"
                               placeholder="Enter your email"
                               required />
                    </div>
                    <div class="form-group">
                        <button type="submit" id="submit" class="inside">
                            Submit
                        </button>
                    </div>
            </form>
        </div>
        <div id="pages">
            <div class="page-picture">
                <a href="https://localhost:44362/Home/About_Us"><img src="" alt="About Us Page" class="" /></a>
            </div>
            <div class="page-picture">
                <a href="https://localhost:44362/Home/Issues"><img src="" alt="Issues Page" class="" /></a>
            </div>
            <div class="page-picture">
                <a href="https://localhost:44362/Home/Volunteer_Contact_Us"><img src="" alt="Volunteer and Contact Us Page" class="" /></a>
            </div>
            <div class="page-picture">
                <a href="https://localhost:44362/Home/Support_Us"><img src="" alt="Support Us Page" class="" /></a>
            </div>
        </div>
