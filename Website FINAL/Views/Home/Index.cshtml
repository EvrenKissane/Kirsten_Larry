<style>
    body {
        Background-color: #fed966;
    }
    #title-div {
        margin: 75px auto 75px auto;
    }
    .text-center {
        text-align: center;
    }
    .column {
        float: left;
        width: 49%;
        padding: 5px;
    }

    .column2 {
        float: right;
        width: 49%;
        padding: 5px;
    }
    .row {
        position: relative;
        left: 10px;
    }
    .row::after {
        content: "";
        clear: both;
        display: table;
    }
    #About {

    }
    .About-button {
        display: block;
        width: 100%;
        padding: 0.75rem;
        background: #004a00;
        color: #ffffff;
        border-radius: 2px;
        cursor: pointer;
        margin: auto auto 200px auto;
    }
    .form-group {
        width: 98%;
        position: relative;
        left: 1%;
    }
    #signup_form_full {
        display: block;
        border: 2px solid black;
        background-color: #b6ff00;
    }
    #signup-form {

    }
    #signup-title {

    }
    #pages {

    }
    .page-picture {

    }
    .img {
        width: 550px;
    }
    .inside {
        width: 100%;
        background: #004a00;
        color: #ffffff;
    }
    hr {
        border: none;
        height: 2px;
        color: #333;
        background-color: #333;
    }
    .center {
        text-align: center;
        margin: auto;
        position: relative;
