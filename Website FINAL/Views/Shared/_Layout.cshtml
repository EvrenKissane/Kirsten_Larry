<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website_FINAL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .submit-button {
            width: 100%;
            background: #004a00;
            color: #ffffff;
        }
        .header-background {
            background-color: #004a00;
        }
        .background {
            background-color: #004a00;
        }
        .header-text {
            
        }
        hr {
            border: none;
            height: 2px;
            color: #333;
            background-color: #333;
        }
        .mailer {
            width: 55%;
            position: relative;
            left: 205px;
        }
        .center {
            text-align: center;
            margin: auto;
            position: relative;
            top: 320px;
            right: 110px;
        }
        .column {
            float: left;
            width: 45%;
            padding: 5px;
        }
        .column2 {
            float: right;
            width: 45%;
            padding: 5px;
        }
        .row::after {
            content: "";
            clear: both;
            display: table;

        }
        body {
            margin-bottom: 33%;
        }
        .border-top {
            border: none;
            height: 2px;
            color: #333;
            background-color: #333;
        }
        .Donate-button {
            display: block;
            width: 100%;
            padding: 0.75rem;
            background: #004a00;
            color: #ffffff;
            border-radius: 2px;
            cursor: pointer;
            margin: auto 200px auto auto;
        }
        #signup_form_full {
            display: block;
            border: 2px solid black;
            background-color: #b6ff00;
            margin: 15px auto 30px auto;
        }
        .form-group {
            width: 98%;
            position: relative;
            left: 1%;
        }
        h3 {
            text-align: center;
            color: #333;
            margin: 15px auto auto auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="header-background navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-5">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a style="color: #4cff00" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a style="color: #4cff00" class="nav-link" asp-area="" asp-controller="Home" asp-action="About_Us">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a style="color: #4cff00" class="nav-link" asp-area="" asp-controller="Home" asp-action="Issues">Issues</a>
                            </li>
                            <li class="nav-item">
                                <a style="color: #4cff00" class="nav-link" asp-area="" asp-controller="Home" asp-action="Volunteer_Contact_Us">Volunteer / Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a style="color: #4cff00" class="nav-link" asp-area="" asp-controller="Home" asp-action="Support_Us">Support Us</a>
                            </li>
                        </ul>
                        <div class="mailer">
                            <a href="https://localhost:44362/"><img src="~/css/Mail.jpg" alt="" class="mailer" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <section class="" id="row">
                <div class="column">
                    <div>
                        <button class="Donate-button" onclick="window.location.href='https://localhost:44362/Home/Support_Us';">
                            <h2>
                                Quick Donation
                            </h2>
                        </button>
                    </div>
                    <div id="signup_form_full">
                        <div class="form-group">
                            <form id="signup-form">
                                <h3>
                                    Sign Up for Updates
                                </h3>
                                <hr />
                                <label id="email-label" for="email"></label>
                                <input type="email"
                                       name="email"
                                       id="email"
                                       class="form-control"
                                       placeholder="Email"
                                       required />
                            </form>
                        </div>
                        <div class="form-group">
                            <button type="submit" id="submit" class="submit-button">
                                Submit
                            </button>
                        </div>
                    </div>
                </div>
                <div class="column2">
                    <a href="https://localhost:44362/"><img class="mailer" src="~/css/Mail.jpg" alt="" /></a>
                </div>
                <div class="right">

                </div>
                <div id="bottom">
                    <p class="center">Kirstenlightforbtboe@gmail.com</p>
                </div>
            </section>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
